<script type="text/javascript">
	$(function() {
		new AjaxUpload("resourceOfSoftware_uploadbtn", {
			name : "filedata",
			action : "upload_upload.action?type=link",
			onComplete : function(file, result) {
				dealAjaxResult(result, function(r) {
					var data = eval("(" + result + ")");
					$("#addressOfSoftware").val(data.msg);
					$.show_warning("提示", "导入成功");
					$("#resourceOfSoftware_add_div1").attr("style", "display: inline");
				});
			}
		});

		$('#resDescribe').xheditor({
			html5Upload : false,
			upImgUrl : 'upload_uploadOfXheditor.action?type=img',
			upImgExt : 'jpg,jpeg,gif,png'
		});

	});

</script>

<div style="padding: 15px; overflow: hidden">

	<form id="form_add" method="post">
		<!-- 资源地址隐藏框 -->
		<input type="hidden" name="address" id="addressOfSoftware" />
		&nbsp;&nbsp;&nbsp;
		<button id="resourceOfSoftware_uploadbtn">上传资源(<1G)</button>
		<div style="display: none;" id="resourceOfSoftware_add_div1">
			<img alt="" src="../images/ok.png">
		</div>
		
		<table class="tableForm" style="width: 100%">
			<tr>
				<td>名称：</td>
				<td><input name="title" type="text" /></td>
				<td>下载分数：</td>
				<td><input name="score" type="text" /></td>
			</tr>
		</table>
		<textarea id="resDescribe" name="describe" rows="12"
			title=" 资源描述" cols="80" style="width: 100%">
	         </textarea>

	</form>
</div>


<script type="text/javascript">
$(function() {
	$("#user_add_roleId").combobox({
		//onChange :operarator_add_changerole,
	    url: "ura_getRoleIdAndComment.action",
	    valueField:'id',   
	    textField:'name',  
	    multiple:false,  
	    panelHeight:'80',
	    onLoadSuccess: function () { 
	    	var data = $('#user_add_roleId').combobox('getData');
	        if (data.length > 0) {
	            $('#user_add_roleId').combobox('select', data[0].id);
	        }
	    }
	});
	});
</script>

<div style="padding: 15px; overflow: hidden">

